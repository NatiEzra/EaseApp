<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EditProfileFragment">

    <!-- צורה כחולה ברקע -->
    <ImageView
        android:id="@+id/backgroundShape"
        android:layout_width="270dp"
        android:layout_height="238dp"
        android:layout_gravity="top|start"
        android:src="@drawable/blue_shape_template"
        android:scaleType="fitXY" />

    <!-- תוכן הגלילה -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- כפתור חזרה -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_back_arrow" />

            <!-- כותרת -->
            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- תמונת פרופיל עם כפתור מצלמה -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:padding="4dp"
                    android:background="@drawable/circle_white_border" />

                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/account_edit_outline"
                    android:background="@drawable/circle_white_border"
                    android:elevation="4dp"
                    android:padding="4dp" />
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <EditText
                android:id="@+id/editProfileName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Name"
                android:background="@drawable/profile_input_bg"
                android:paddingStart="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Verify Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Current Password"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <EditText
                android:id="@+id/editProfileVerifyPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your current password"
                android:inputType="textPassword"
                android:background="@drawable/profile_input_bg"
                android:paddingStart="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <EditText
                android:id="@+id/editProfilePassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/profile_input_bg"
                android:paddingStart="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <EditText
                android:id="@+id/editProfileConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:background="@drawable/profile_input_bg"
                android:paddingStart="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />
            <!-- Date of Birth -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <TextView
                android:id="@+id/editProfileDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/profile_input_bg"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:text="Select date"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:drawableEnd="@drawable/ic_dropdown_arrow"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="false" />

            <!-- Gender -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary" />

            <Spinner
                android:id="@+id/editProfileGender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/profile_input_bg"
                android:layout_marginBottom="24dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/profile_edit_button_bg"
                android:layout_marginTop="16dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/CancelButtonEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FADBD8"
                android:text="Cancel"
                android:textColor="#C0392B" />
        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/editProfileProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>
